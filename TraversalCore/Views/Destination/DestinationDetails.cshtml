@model Destination
@{
    ViewData["Title"] = "DestinationDetails";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Tur Detayları</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="#url">Anasayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span>@Model.City Turu Detayı  </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!--/blog-->
<div class="py-5 w3l-homeblock1 text-center">
    <div class="container mt-md-3">
        <h3 class="blog-desc-big text-center mb-4">@Model.City-@Model.DayNight-@Model.Price ₺</h3>
        <h5 class="blog-desc-big text-center mb-4">@Model.Description</h5>
        <div class="blog-post-align">
            <div class="blog-post-img">
                <a href="#"><img src="~/guideImages/@Model.Guide.Image" alt="" class="rounded-circle img-fluid" /></a>
            </div>
            <div class="blog-post-info">
                <div class="author align-items-center mb-1">
                    <a href="#">@Model.Guide.Name</a>
                </div>
                <ul class="blog-meta">
                    <li class="meta-item blog-lesson">
                        <span class="meta-value">@Model.Guide.Description</span>
                    </li>
@*                     <li class="meta-item blog-students">
                        <span class="meta-value">@Model.Price ₺</span>
                    </li> *@
                </ul>
            </div>
        </div>
    </div>
</div>
<section class="blog-post-main w3l-homeblock1">
    <!--/blog-post-->
    <div class="blog-content-inf pb-5">
        <div class="container pb-lg-4">
            <div class="single-post-image">
                <div class="post-content">
                    <img src="assets/images/banner2.jpg" class="radius-image img-fluid mb-5" alt="" />
                </div>
            </div>
            <div class="single-post-content">
                <p class="alphabet mb-4">
                    <span class="big-letter">A</span>
                    @Model.Details1
                </p>
                <blockquote class="blockquote my-5">
                    <div class="icon-quote"><span class="fa fa-quote-left" aria-hidden="true"></span></div>
                    Gezi Tur Seyehat Rotalar Dünya.
                    <footer class="blockquote-footer mt-3">Traversal</footer>
                </blockquote>
                <div class="sing-post-thumb mb-5 row pt-3">
                    <div class="col-sm-6">
                        <a href="#url"><img src="~/destinationImages/@Model.Image" class="img-fluid radius-image" alt=""></a>
                    </div>
                    <div class="col-sm-6 mt-sm-0 mt-3">
                        <a href="#url"><img src="~/destinationImages/@Model.Image" class="img-fluid radius-image" alt=""></a>
                    </div>
                </div>
                <p class="mb-4">
                    @Model.Details2
                </p>
                @await Component.InvokeAsync("CommentList",new { id = Model.DestinationID })
                @await Html.PartialAsync("~/Views/Comment/AddComment.cshtml",Model)

            </div>
        </div>
        <!--//blog-post-->
</section>
