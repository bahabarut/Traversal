@model Destination
<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Yorum Bırak</h4>
    <p class="mb-4">
        İşaretli Alanları Doldurumanız Gereklidir *
    </p>
    <form method="post" asp-controller="Comment" asp-action="AddComment">
        <div class="form-group">
            <input type="hidden" name="DestinationID" value="@Model.DestinationID" />
            <textarea name="CommentContent" class="form-control" placeholder="Yorumunuz*" required="" spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-12">
                <input type="text" name="CommentUser" class="form-control" placeholder="Adınız Soyadınız*"
                       required="">
            </div>
            @*             <div class="form-group col-lg-6">
            <input type="text" name="Email" class="form-control" placeholder="Email*" required="">
            </div> *@
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Gönder</button>
        </div>
    </form>
</div>