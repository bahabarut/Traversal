@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="~/traversalAdmin/assets/"
      data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>Şifre Güncellem Ekranı</title>

    <meta name="description" content="" />
    <link rel="icon" type="image/x-icon" href="~/traversalAdmin/assets/img/favicon/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/traversalAdmin/assets/vendor/fonts/boxicons.css" />
    <link rel="stylesheet" href="~/traversalAdmin/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/traversalAdmin/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/traversalAdmin/assets/css/demo.css" />
    <link rel="stylesheet" href="~/traversalAdmin/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <script src="~/traversalAdmin/assets/vendor/js/helpers.js"></script>
    <script src="~/traversalAdmin/assets/js/config.js"></script>
</head>

<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <div class="layout-page">
                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <div class="row" style="margin-left:310px;">
                            <div class="col-xl-4">
                                <div class="card mb-4">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h4 class="mb-0">Şifre Yenileme Sayfası</h4>
                                    </div>
                                    <div class="card-body">
                                        <form method="post">
                                            <div class="mb-3">
                                                <label class="form-label" for="basic-default-fullname">Şifrenizi Giriniz</label>
                                                <input type="password" class="form-control" name="password" id="basic-default-fullname" placeholder="Şifrenizi Giriniz" />
                                            </div>         
                                            <div class="mb-3">
                                                <label class="form-label" for="confPass">Şifrenizi Tekrar Giriniz</label>
                                                <input type="password" class="form-control" name="confirmPassword" id="confPass" placeholder="Şifrenizi Tekrar Giriniz" />
                                            </div>
                                            <button type="submit" class="btn btn-primary">Gönder</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    <script src="~/traversalAdmin/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/traversalAdmin/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/traversalAdmin/assets/vendor/js/bootstrap.js"></script>
    <script src="~/traversalAdmin/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/traversalAdmin/assets/vendor/js/menu.js"></script>
    <script src="~/traversalAdmin/assets/js/main.js"></script>
    <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>
