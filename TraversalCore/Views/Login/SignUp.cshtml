@model UserRegisterViewModel
@{
    Layout = null;
}
<!doctype html>
<html lang="zxx">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Misafir Kayıt Ekranı</title>
    <link href="//fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="//fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/traversal/assets/css/style-liberty.css">
</head>
<body>

    <section class="w3l-contact" id="contact">
        <div class="contact-infubd py-5">
            <div class="container py-lg-3">
                <div class="contact-grids row justify-content-center">
                    <div class="col-lg-6 mt-lg-0 mt-5">
                        <h5 class="mb-2">Yeni Hesap Oluştur</h5>
                        <form method="post" class="signin-form">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="input-grids">
                                <div class="form-group">
                                    <input type="text" asp-for="Name" placeholder="Adınız*" class="contact-input mb-0" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="SurName" placeholder="Soyadınız*" class="contact-input mb-0" />
                                    <span class="text-danger" asp-validation-for="SurName"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="UserName" placeholder="Kullanıcı Adınız*" class="contact-input mb-0" />
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" asp-for="Mail" placeholder="Mail Adresiniz*" class="contact-input mb-0" required="" />
                                    <span class="text-danger" asp-validation-for="Mail"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Password" placeholder="Şifre*" class="contact-input mb-0" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="ConfirmPassword" placeholder="Şifre Onayla*" class="contact-input mb-0" />
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                                <a class="text-muted" href="/Login/SignIn">Giriş Yap</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


    @await Html.PartialAsync("~/Views/Shared/LayoutPartial/_ScriptsPartial.cshtml")
</body>

</html>