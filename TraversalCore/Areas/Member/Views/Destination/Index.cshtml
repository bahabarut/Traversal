@model List<EntityLayer.Concrete.Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            @*             <div class="card-header pb-0">
            <h6>Authors table</h6>
            </div> *@
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table table-sm table-hover table-striped mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Şehir</th>
                                <th>Süre</th>
                                <th>Kapasite</th>
                                <th>Fiyat</th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DestinationID</td>
                                    <td>@item.City</td>
                                    <td>@item.Description</td>
                                    <td>@item.Capacity</td>
                                    <td>@item.Price</td>
                                    <td>
                                        <a href="javascript:;" class="btn btn-outline-info btn-sm  font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">Detaylar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>