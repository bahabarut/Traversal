@model List<Reservation>
@{
    ViewData["Title"] = "MyCurrentReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<div class="content-header row">
    <div class="content-header-left col-md-4 col-12 mb-2">
        <h3 class="content-header-title">Aktif  Rezervasyonlarım</h3>
    </div>
    <div class="content-header-right col-md-8 col-12">
        <div class="breadcrumbs-top float-md-right">
            <div class="breadcrumb-wrapper mr-1">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Anasayfa</a>
                    </li>
                    <li class="breadcrumb-item active">Aktif Rezervasyonlarım</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content-body">
    <!-- Basic Tables start -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    @* <h4 class="card-title">Buttonalar yeri</h4> *@
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body">
                        <div class="table-responsive">
                            @if (@Model.Count() >= 1)
                            {
                                <table class="table table-sm table-hover table-striped mb-0">
                                    <thead>
                                        <tr>
                                            <th>Tur</th>
                                            <th>Kişi Sayısı</th>
                                            <th>Açıklama</th>
                                            <th>Durum</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Destination.City - @item.Destination.Price - @item.Destination.Capacity</td>
                                                <td>@item.PersonCount</td>
                                                <td>@item.Description</td>
                                                <td>@item.Status</td>
                                                @*                                     <td>
                                        <a href="javascript:;" class="btn btn-outline-info btn-sm  font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">Detaylar</a>
                                        </td> *@
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <h1 class="text-center p-2">Kayıt Bulunamadı...</h1>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
