@model Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-body px-0 pt-0 pb-2">
                <div class="contact-grids row justify-content-center">
                    <div class="col-lg-12 mt-lg-0">
                        @* <h5 class="mb-2">Giriş Yap</h5> *@
                        <form method="post" class="res-form">
                            <div class="input-grids p-3">
                                <div class="form-group">
                                    <select class="form-control" asp-for="Destination" id="txtDestination" asp-items="ViewBag.destinations">
                                        <option>Bir Rezervasyon Seçiniz</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="number" asp-for="PersonCount" id="txtPersonCount" placeholder="Kişi Sayısı*" class="form-control" required="" />
                                </div>
                                <div class="form-group">
                                    <input type="date" asp-for="ReservatioDate" id="dateRes" placeholder="Tarih*" class="form-control" required="" />
                                </div>
                                <div class="form-group">
                                    <textarea asp-for="Description" id="txtDescription" placeholder="Varsa Eklemek İstedikleriniz..." class="form-control" required=""></textarea>
                                </div>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-primary" type="submit" id="submitBtn">Rezervasyon Yap</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

