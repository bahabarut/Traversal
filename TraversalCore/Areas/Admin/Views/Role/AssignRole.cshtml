@model List<DTOLayer.DTOs.RoleDTOs.UserRolesDTO>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <form method="post">
                <div class="card-body">
                    <div class="row">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model[i].roleName" />
                                    <input type="hidden" asp-for="@Model[i].roleId" />
                                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].roleExist" id="role-@Model[i].roleId" />
                                    <label for="role-@Model[i].roleId" class="form-check-label">@Model[i].roleName</label>
                                </div>
                            </div>
                        }
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

