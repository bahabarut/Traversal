@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header"><a href="/Admin/Role/AddRole" class="btn btn-primary">Yeni Rol</a></h5>
    <div class="table-responsive text-nowrap">
        @if (Model.Count > 0)
        {
            <table class="table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Adı Soyadı</th>
                        <th>Kullanıcı Adı</th>
                        <th>Rolleri Yönet</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name @item.Surname</td>
                            <td>@item.UserName</td>
                            <td><a href="/Admin/Role/AssignRole/@item.Id" class="btn btn-sm btn-outline-info">Rolleri Yönet</a></td>
                            @*                             <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-sm btn-outline-warning">Düzenle</a></td>
                    <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-sm btn-outline-danger">Sil</a></td> *@
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning m-3"> Her Hangi Bir Role Bulunamadı</div>
        }
    </div>
</div>


