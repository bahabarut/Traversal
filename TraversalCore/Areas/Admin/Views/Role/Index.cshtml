@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">
        <a href="/Admin/Role/AddRole" class="btn btn-primary">Yeni Rol</a>
        <a href="/Admin/Role/UserList" class="btn btn-secondary">Kullanıcılar Ve Roller</a>
    </h5>
    <div class="table-responsive text-nowrap">
        @if (Model.Count > 0)
        {
            <table class="table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Rol Adı</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-sm btn-outline-warning">Düzenle</a></td>
                            <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-sm btn-outline-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning m-3"> Her Hangi Bir Role Bulunamadı</div>
        }
    </div>
</div>

