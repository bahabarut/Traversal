@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header"><a href="/Admin/User/AddUser" class="btn btn-primary">Yeni Kullanıcı</a></h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-sm table-hover table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Kullanıcı Adı</th>
                    <th>Mail</th>
                    <th>Yorumlar</th>
                    <th>Destinasyonlar</th>
                    <th>Düzenle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name @item.Surname</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td><a href="/Admin/User/UserComments/@item.Id" class="btn btn-sm btn-outline-info">Yorumlar</a></td>
                        <td><a href="/Admin/User/UserDestination/@item.Id" class="btn btn-sm btn-outline-success">Destinasyonlar</a></td>
                        <td><a href="/Admin/User/UpdateUser/@item.Id" class="btn btn-sm btn-outline-warning">Düzenle</a></td>
                        <td><a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-sm btn-outline-danger">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
