@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    img {
        border-radius: 50%;
    }
</style>

<div class="card">
    <h5 class="card-header"><a href="/Admin/DestinationMediatR/AddGuide" class="btn btn-primary">Yeni Rehber</a></h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-sm table-hover table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Görsel</th>
                    <th>Ad Soyad</th>
                    <th>Açıklama</th>
                    <th>Düzenle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.GuideID</td>
                        <td><img src="~/wwwroot/guideImages/@item.Image" height="50" width="50" /></td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td><a href="/Admin/DestinationMediatR/UpdateGuide/@item.GuideID" class="btn btn-sm btn-outline-warning">Düzenle</a></td>
                        <td><a href="/Admin/DestinationMediatR/DeleteGuide/@item.GuideID" class="btn btn-sm btn-outline-danger">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

