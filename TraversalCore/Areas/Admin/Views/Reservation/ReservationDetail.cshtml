@model Reservation
@{
    ViewData["Title"] = "ReservationDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img class="card-img card-img-left" src="~/destinationImages/@Model.Destination.Image" alt="Card image" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.AppUser.Name @Model.AppUser.Surname - @Model.AppUser.Email - @Model.Destination.City @Model.Destination.DayNight</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><small class="text-muted">@Model.Status</small></p>
            </div>
            <div class="card-footer">
                <a href="/Admin/Reservation/Approve/@Model.ReservationID" class="btn btn-sm btn-outline-success">Onayla</a>
                <a href="/Admin/Reservation/Reject/@Model.ReservationID" class="btn btn-sm btn-outline-dark">Reddet</a>
            </div>
        </div>
    </div>
</div>