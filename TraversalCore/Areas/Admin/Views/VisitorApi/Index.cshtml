@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header"><a href="/Admin/VisitorApi/AddVisitor" class="btn btn-primary">Yeni Ziyaretçi</a></h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-sm table-hover table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Şehir</th>
                    <th>Ülke</th>
                    <th>Mail</th>
                    <th>Düzenle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.VisitorID</td>
                        <td>@item.Name</td>
                        <td>@item.SurName</td>
                        <td>@item.City</td>
                        <td>@item.Country</td>
                        <td>@item.Mail</td>
                        <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorID" class="btn btn-sm btn-outline-warning">Düzenle</a></td>
                        <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorID" class="btn btn-sm btn-outline-danger">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
