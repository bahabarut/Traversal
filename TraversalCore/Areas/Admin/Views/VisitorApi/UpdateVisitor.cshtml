@model VisitorViewModel
@{
    ViewData["Title"] = "UpdateVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <form method="post">
                <input type="hidden" asp-for="VisitorID"/>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div>
                                <label for="Name" class="form-label">Ad</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <label for="SurName" class="form-label">Soyad</label>
                                <input type="text" class="form-control" asp-for="SurName" id="SurName" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <label for="Mail" class="form-label">Mail</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <label for="City" class="form-label">Şehir</label>
                                <input type="text" class="form-control" asp-for="City" id="City" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <label for="Country" class="form-label">Ülke</label>
                                <input type="text" class="form-control" asp-for="Country" id="Country" />
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>